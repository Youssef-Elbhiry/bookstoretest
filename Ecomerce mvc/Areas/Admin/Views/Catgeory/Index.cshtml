<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>View Categories</h2>
        <a asp-controller="Catgeory" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover bg-white">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.OrderBy(c=>c.Displayorder))
                {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Displayorder</td>
                
                    <td>
                            <a asp-controller="Catgeory" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Catgeory" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash3-fill"></i> Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
