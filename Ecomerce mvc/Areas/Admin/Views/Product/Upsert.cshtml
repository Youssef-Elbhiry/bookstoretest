@model ProductViewModel
@{
    ViewData["Title"] = "Create";
}
<partial name="_Notification" />
<div class="py-3">
    <h3> Product Management</h3>
</div>
<div class="card">
    <div class="card-header ">
        <div >
            <h6>@(Model.product.Id != 0 ? "Update" : "Create" ) Product</h6>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <form method="post" enctype="multipart/form-data">
                    <input asp-for="product.Id" hidden />
                  @*   <input asp-for="product.ImageUrl" hidden /> *@
                    <div class=" mb-3">
                        <label asp-for="product.Title" class="form-label fw-semibold"></label>
                        <input asp-for="product.Title" class="form-control" />
                        <span asp-validation-for="product.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="product.Author" class="form-label fw-semibold"></label>
                        <input asp-for="product.Author" class="form-control" />
                        <span asp-validation-for="product.Author" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="product.Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="product.Description" class="form-control"></textarea>
                        <span asp-validation-for="product.Description" class="text-danger"></span>

                    </div>

                    <div class="mb-3">
                        <label asp-for="product.ISBN" class="form-label fw-semibold"></label>
                        <input asp-for="product.ISBN" class="form-control" />
                        
                        <span asp-validation-for="product.ISBN" class="text-danger"></span>

                    </div>

                    <div class="mb-3">
                        <label asp-for="product.ListPrice" class="form-label fw-semibold"></label>
                        <input asp-for="product.ListPrice" class="form-control" />
                        <span asp-validation-for="product.ListPrice" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label asp-for="product.Price" class="form-label fw-semibold"></label>
                        <input asp-for="product.Price" class="form-control" />
                        <span asp-validation-for="product.Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="product.Price50" class="form-label fw-semibold"></label>
                        <input asp-for="product.Price50" class="form-control" />     
                        <span asp-validation-for="product.Price50" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="product.Price100" class="form-label fw-semibold"></label>
                        <input asp-for="product.Price100" class="form-control" />
                        <span asp-validation-for="product.Price100" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="product.CategoryId" class="form-label fw-semibold"></label>
                        <select asp-for="product.CategoryId" asp-items="@Model.Categorylist" class="form-select ">
                            <option selected disabled>--Select Category--</option>
                        </select>
                       

                    </div>
                    <div class="mb-3">
                      <label asp-for="product.ProductImages" class="form-label fw-semibold"></label> 
                        <input type="file" name="files" class="form-control" multiple/>
                    </div>

                    <div class="row">
                        <div class="col-6 col-md-3">
                            @if (Model.product.Id != 0)
                            {
                                <button type="submit" class="btn form-control btn-primary">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn form-control btn-primary">Create</button>
                            }

                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn form-control border-0 btn-outline-secondary">Back To List</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-3">
              @if(Model.product.ProductImages is not null)
                {
                    @foreach (var productimage in Model.product.ProductImages)
                    {
                        <div class=" p-2 m-3 text-center position-relative">
                            <img src="@productimage.ImageUrl" style="border-radius:5px ;width:100% ;height:280px;  " />
                            <a asp-action="DeleteImg" asp-route-id="@productimage.Id" class="position-absolute  btn btn-danger" style="left:83%;top:3%;">X</a>
                        </div>
                    }
                }
              
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
            
        tinymce.init({
          selector: 'textarea',
          plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
          toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}