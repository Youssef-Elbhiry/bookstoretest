@model IEnumerable<Company>
<partial name="_Notification" />
<div class="card">
    <div class="card-header  bg-secondary bg-gradient">
        <div class="text-center ">
            <h2 class="text-white py-2">Companies</h2>
        </div>
    </div>
    <div class="card-body container">
        <div class=" pb-3 pt-4 me-5 text-end">
            <a asp-controller="Company" asp-action="UpSert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Company</a>
        </div>
        <table class="table table-striped table-bordered " id="myTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Street Address</th>
                    <th></th>
                </tr>
            </thead>
           

        </table>
    </div>

</div>
@section scripts{
    <script src="~/js/Company.js"></script>
}