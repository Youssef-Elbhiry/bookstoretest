@model IEnumerable<Product>

<div class="row mb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card shadow border-0 p-2">

                        @if (product.ProductImages != null && product.ProductImages.Count() >0)
                        {
                            <img src="@product.ProductImages.FirstOrDefault()?.ImageUrl" class="card-img-top rounded" />
                        }
                        else
                        {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        }

                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title text-dark h5">@product.Title</p>
                                <p class="card-title text-success">by <b>@product.Author</b></p>
                            </div>

                            <div class="pl-1">
                                <p class="text-dark opacity-75 pb-0">
                                    List Price:
                                    <span class="text-decoration-line-through">
                                        @product.ListPrice.ToString("C")
                                    </span>
                                    <span class="ms-4">
                                        @product.Price100.ToString("C")
                                    </span>
                                </p>
                            </div>

                            <div>
                                <a asp-action="Detail"
                                   asp-route-id="@product.Id"
                                   class="btn btn-primary bg-gradient border-0 form-control">
                                    More Details
                                </a>
                            </div>
                        </div> 

                    </div>
                </div>
            </div>
        </div>
    }
</div>
