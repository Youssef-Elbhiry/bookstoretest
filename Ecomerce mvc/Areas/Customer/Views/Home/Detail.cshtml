<form method="post" asp-action="Detail" asp-route-id="">
    <input asp-for="ProductId" hidden />
    <div class="container py-5">

    <a asp-action="Index" class="btn btn-outline-dark mb-4">
        <i class="bi bi-arrow-left"></i> Back to Home
    </a>


        <div class="row g-5 ">


        <div class="col-md-4 text-center">
            <div class="shadow-sm m-3 bg-white rounded-4">















                    @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Count()>0)
                    {
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                @foreach (var image in Model.Product.ProductImages.Select((ProductImage, index) => new { ProductImage = ProductImage, index = index }))
                                {
                                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@image.index" class="@(@image.index == 0 ? "active" : "")" aria-current="true" aria-label="Slide @image.index"></button>
                                }

                            </div>
                            <div class="carousel-inner">
                                @foreach (var image in Model.Product.ProductImages.Select((ProductImage, index) => new { ProductImage = ProductImage, index = index }))
                                {
                                    <div class="@(image.index == 0 ? "carousel-item active" : "carousel-item ")">
                                        <img src="@image.ProductImage.ImageUrl" class="d-block w-100" alt="...">
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>

                    }


















            </div>
        </div>
        <div class="col-md-8">

            <h2 class="fw-bold mb-1">@Model.Product.Title</h2>
            <p class="text-muted mb-2 fs-5">by @Model.Product.Author</p>

            <span class="badge bg-dark rounded-pill px-3 py-2">@Model.Product.category.Name</span>

            <hr>

            <div class="mb-3">
                <p class="mb-1"><strong>ISBN:</strong> @Model.Product.ISBN</p>
                <p class="mb-1"><strong>List Price:</strong> <s>@Model.Product.ListPrice</s></p>
            </div>
            <div class="row text-center ps-2">
                <div class="p-1 col-3  bg-white border-bottom">
                    <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                </div>
                <div class="p-1 col-3  bg-white border-bottom">
                    <div class="text-dark text-opacity-50 fw-semibold">1-50</div>
                </div>
                <div class="p-1 col-3  bg-white border-bottom">
                    <div class="text-dark text-opacity-50 fw-semibold">51-100</div>
                </div>
                <div class="p-1 col-3 bg-white border-bottom">
                    <div class="text-dark text-opacity-50 fw-semibold">100+</div>
                </div>
            </div>
            <div class="row text-center ps-2 mb-2">
                <div class="p-1 col-3  bg-white text-success fw-bold">
                    <div>Price</div>
                </div>
                <div class="p-1 col-3  bg-white text-success fw-bold">
                    <div>@Model.Product.Price.ToString("c")</div>
                </div>
                <div class="p-1 col-3  bg-white text-success fw-bold">
                    <div>@Model.Product.Price50.ToString("c")</div>
                </div>
                <div class="p-1 col-3  bg-white text-success fw-bold">
                    <div>@Model.Product.Price100.ToString("c")</div>
                </div>
            </div>
            <p class="text-muted">
               @Html.Raw(Model.Product.Description)
            </p>

            <div class="d-flex align-items-center gap-3 mt-4">

                <div>
                    <label class="form-label fw-bold">Count</label>
                    <input asp-for="Count" class="form-control form-control-lg" min="1" style="width: 100px;">
                </div>

                <button type="submit" class="btn btn-dark btn-lg px-5 align-self-end">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </button>

            </div>

        </div>
    </div>
</div>
</form>